###############################################################################
# Required Configuration
###############################################################################

# OpenAI API key retrieved here: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here


# Search Configuration
TAVILY_API_KEY=your_tavily_api_key_here

###############################################################################
# Supabase Configuration (Auth)
###############################################################################

# Your Supabase project URL (get from: https://supabase.com/dashboard/project/_/settings/api)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase project's anonymous (public) key (get from: https://supabase.com/dashboard/project/_/settings/api)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

###############################################################################
# Optional Features
###############################################################################

# Chat History Storage
# ENABLE_SAVE_CHAT_HISTORY=true

# Redis Configuration
# USE_LOCAL_REDIS=false
# LOCAL_REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Additional AI Providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Skills API URL (民宿尽调等技能调用)
# 本地开发: http://localhost:8000
# 生产环境: https://skills-api-proxy-1.onrender.com
SKILLS_API_URL=http://localhost:8000

# GOOGLE_GENERATIVE_AI_API_KEY=[YOUR_GOOGLE_API_KEY]
# GROQ_API_KEY=[YOUR_GROQ_API_KEY]
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Additional Features
# NEXT_PUBLIC_ENABLE_SHARE=true

###############################################################################
# Aliyun SMS Configuration (阿里云短信配置)
###############################################################################

# 阿里云 AccessKey ID（在 RAM 访问控制中创建）
# ALIYUN_SMS_ACCESS_KEY_ID=your_access_key_id

# 阿里云 AccessKey Secret
# ALIYUN_SMS_ACCESS_KEY_SECRET=your_access_key_secret

# 短信签名名称（在阿里云短信服务中申请）
# ALIYUN_SMS_SIGN_NAME=出海罗盘

# 短信模板 CODE（在阿里云短信服务中申请，模板内容需包含 ${code} 变量）
# ALIYUN_SMS_TEMPLATE_CODE=SMS_123456789

###############################################################################
# Better Auth Configuration (新认证系统)
###############################################################################

# Better Auth 密钥（用于加密 session，请生成一个随机字符串）
# 生成方法：openssl rand -base64 32
BETTER_AUTH_SECRET=your_better_auth_secret_here

# Better Auth URL（默认使用 NEXT_PUBLIC_APP_URL）
# BETTER_AUTH_URL=http://localhost:3000

###############################################################################
# SMTP Email Configuration (飞书邮箱配置)
###############################################################################

# SMTP 服务器地址
SMTP_HOST=smtp.feishu.cn

# SMTP 端口（SSL 使用 465，STARTTLS 使用 587）
SMTP_PORT=465

# SMTP 用户名（发件人邮箱）
SMTP_USER=info@moments.top

# SMTP 密码（飞书应用密码）
SMTP_PASSWORD=your_smtp_password_here

###############################################################################
# Supabase Admin Configuration (已废弃，迁移到 Better Auth)
###############################################################################

# Supabase Service Role Key（用于服务端管理用户）
# 获取位置：https://supabase.com/dashboard/project/_/settings/api
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
